<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_margin="20dp">


        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:src="@drawable/bluetooth_enabled"
                android:id="@+id/img_ble_enabled"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/img_ble_disabled"
                android:src="@drawable/bluetooth_disabled"/>

        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/txt_device_name"
                android:text="--:--:--"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:id="@+id/txt_device_status"
                android:text="연결되지 않음"/>

        </LinearLayout>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="검색"
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_search_ble"/>


    </LinearLayout>



</LinearLayout>